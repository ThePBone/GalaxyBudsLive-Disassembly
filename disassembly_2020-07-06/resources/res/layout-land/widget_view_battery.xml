<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout_widget_battery_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:id="@+id/widget_background" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/background_widget"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="350dp" android:minHeight="80dp" android:paddingStart="8dp" android:paddingEnd="8dp">
            <TextView android:textSize="@dimen/widget_landscape_device_bt_name_text_size" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center" android:id="@+id/widget_text_device_bt_name" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:maxLines="2" android:includeFontPadding="false" android:layout_weight="3"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_widget_battery_device" android:focusable="true" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="25">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                            <ImageView android:id="@+id/image_widget_device_left" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_buds_left_white" android:adjustViewBounds="true" android:layout_weight="1"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="22">
                            <TextView android:textSize="9dp" android:textColor="@color/widget_device_name_color_style_white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_device_left" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/widget_device_left" android:maxLines="1" android:layout_weight="1"/>
                            <TextView android:textSize="10dp" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_battery_gauge_left" android:layout_width="match_parent" android:layout_height="match_parent" android:text="100%" android:maxLines="1" android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="25">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                            <ImageView android:id="@+id/image_widget_device_right" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_buds_right_white" android:adjustViewBounds="true" android:layout_weight="1"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="22">
                            <TextView android:textSize="9dp" android:textColor="@color/widget_device_name_color_style_white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_device_right" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/widget_device_right" android:maxLines="1" android:layout_weight="1"/>
                            <TextView android:textSize="10dp" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_battery_gauge_right" android:layout_width="match_parent" android:layout_height="match_parent" android:text="100%" android:maxLines="1" android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_widget_battery_common" android:focusable="true" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="25">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                                <ImageView android:id="@+id/image_widget_common_left" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_buds_left_white" android:adjustViewBounds="true" android:layout_weight="10"/>
                                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="18"/>
                                <ImageView android:id="@+id/image_widget_common_right" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_buds_right_white" android:adjustViewBounds="true" android:layout_weight="10"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="22">
                            <TextView android:textSize="9dp" android:textColor="@color/widget_device_name_color_style_white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_common" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/widget_device_buds" android:maxLines="1" android:layout_weight="1"/>
                            <TextView android:textSize="10dp" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_battery_gauge_common" android:layout_width="match_parent" android:layout_height="match_parent" android:text="100%" android:maxLines="1" android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_widget_cradle" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="25">
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                            <ImageView android:id="@+id/image_widget_cradle" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/widget_buds_cradle_white" android:adjustViewBounds="true" android:layout_weight="1"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="22">
                            <TextView android:textSize="9dp" android:textColor="@color/widget_device_name_color_style_white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_cradle" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/widget_cradle" android:maxLines="1" android:layout_weight="1"/>
                            <TextView android:textSize="10dp" android:textColor="@color/widget_title_color_style_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_widget_battery_gauge_cradle" android:layout_width="match_parent" android:layout_height="match_parent" android:text="100%" android:maxLines="1" android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
