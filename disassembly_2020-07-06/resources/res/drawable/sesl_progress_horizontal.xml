<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@+id/background" android:height="@dimen/sesl_progress_bar_height">
        <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="?attr/progressNormalColor"/>
    </item>
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@+id/secondaryProgress" android:height="@dimen/sesl_progress_bar_height">
        <scale android:scaleWidth="100%">
            <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="?attr/progressActivatedColor"/>
        </scale>
    </item>
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@+id/progress" android:height="@dimen/sesl_progress_bar_height">
        <scale android:scaleWidth="100%">
            <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="?attr/progressActivatedColor"/>
        </scale>
    </item>
</layer-list>
